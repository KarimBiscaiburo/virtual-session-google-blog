---
import { Image } from 'astro:assets';

import meImage from "../img/me.webp";

import Navigation from "../components/Navigation";

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Blog - Hola Entrepreneurs 2024</title>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Creepster&family=Roboto:wght@400;500;700;900&family=Special+Elite&display=swap" rel="stylesheet">
	</head>
	<body class="flex w-full bg-gray-50">
		
		<Navigation client:load/>
		
		<div class="px-7 rounded-l-3xl bg-white w-full ">
			<header class="h-28 flex justify-center items-center gap-4 mb-10">
				<Image src={meImage} alt={"imagen-de-mi"} class={"object-contain rounded-full w-[90px] h-[90px] border shadow bg-white"}/>
				<div>
					<p class="text-2xl text-black">
						Blog hecho por 
						<a href="https://www.linkedin.com/in/karim-biscaiburo/" 
						target="_blank" 
						rel="noopener noreferrer" 
						class="text-cyan-700 font-medium border-b-2 border-cyan-700 hover:text-cyan-600 hover:border-cyan-600 transition">
							Karim Biscaiburo
						</a>
					</p>
				</div>
			</header>
			<main class="max-w-[1300px]">
				<slot />
			</main>
		</div>
	</body>
</html>

<!-- Markdown Styles -->
<style is:global>
	h1, h2, h3, h4, main li {
		margin: 15px 0;
	}
	h1 {
		font-size: 50px;
		font-weight: 700;
	}
	h2 {
		font-size: 40px;
		font-weight: 500;
	}
	h3 {
		font-size: 30px;
	}
	h4 {
		font-size: 25px;
		font-weight: 700;
	}
	p {
		font-size: 18px;
		margin: 10px 0;
		color: #1f2937; 
	}
	main a {
		color: #0e7490;
	}
	main a:hover {
		color: #0891b2;
		text-decoration: underline;
	}
	main img {
		margin: 30px 0;
	}
	main li {
		font-size: 20px;
		font-weight: 500;
	}


	@media (max-width: 1024px) {
		h1 {
			font-size: 38px;
			font-weight: 700;
		}
		h2 {
			font-size: 32px;
			font-weight: 500;
		}
		h3 {
			font-size: 22px;
		}
		h4 {
			font-size: 17px;
			font-weight: 700;
		}
		p {
			font-size: 15px;
			margin: 10px 0;
			color: #1f2937; 
		}
		main a {
			color: #0e7490;
		}
		main a:hover {
			color: #0891b2;
			text-decoration: underline;
		}
		main img {
			margin: 30px 0;
		}
		main li {
			font-size: 20px;
			font-weight: 500;
		}
	}
</style>